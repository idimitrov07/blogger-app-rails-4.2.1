<div>
  <h4>Comment by <%= comment.author_name %></h4>
  <p class="comment">
    <%= comment.body %>
  </p>
  <p>
    Posted
    <% if comment.article %>
      <%= distance_of_time_in_words(comment.article.created_at, comment.created_at) %>
    <% else %>
      <%= distance_of_time_in_words(comment.photo.created_at, comment.created_at) %>
    <% end %>
      later
  </p>
</div>
