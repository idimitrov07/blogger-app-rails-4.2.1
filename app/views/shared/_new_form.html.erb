<%= form_for(activity, html: { class: "pure-form pure-form-stacked", multipart: true }) do |f| %>
	<fieldset>
		<%= f.label :title %>
		<%= f.text_field :title %>

    <% if controller_name == 'photos' %>
      <%= f.label :url, "Image Url" %>
      <%= f.text_field :url %>
			<% if activity.url.present? %>
				<%= image_tag activity.url, class: 'photo' %>
			<% end %>
    <% end %>

		<% if controller_name == 'articles' %>
			<% if activity.image.exists? %>
			 	<%= image_tag activity.image.url %>
			<% end %>
			<%= f.label :image, "Attach an Imge" %>
			<%= f.file_field :image %>
		<% end %>

		<%= f.label :body %>
		<%= f.text_area :body, class: 'hashtag_textarea' %>
		<br>
		<%= f.submit class: "pure-button pure-button-primary" %>
	</fieldset>
<% end %>
<script type="text/javascript">
	$(document).ready(function() {
		$("textarea.hashtag_textarea").hashtags();
	});
</script>
